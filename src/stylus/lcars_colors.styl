	bahama-blue: #006699,

	blue-bell: #9999cc,
	melrose: #9999ff,
	hopbush: #cc6699,
	chestnut-rose: #cc6666,
	orange-peel: #FF9966,
	atomic-tangerine: #ff9900,

	danub: #6688cc,
	indigo: #4455bb,
